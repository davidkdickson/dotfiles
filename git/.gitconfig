[user]
        name = David Dickson
        email = davidkdickson@gmail.com
[core]
        editor = cursor --wait
        excludesfile = ./gitignore_global
[color]
        ui = true
[push]
        default = tracking
[diff]
	tool = cursor
[alias]
        # log
        l = log --graph --all --pretty=format:'%C(auto)%h -%d%Creset %s %C(dim green)[%cr] %C(bold blue)%an%Creset'
        lna = log --graph --pretty=format:'%C(auto)%h -%d%Creset %s %C(dim green)[%cr] %C(bold blue)%an%Creset'
        ll = l --stat

        # status in short format
        s = status -s

        # add all changes from tracked and untracked
        a = add --all .
        aa = add

        # merge without fast forwarding
        m = merge --no-ff
        ms = merge --squash     # squash multiple commits into one
        mnc = m --no-commit

        # branches
        b = branch
        bl = branch --all
        bd = branch -d
        bprune = fetch --prune
        merged = b --merged
        nomerge = b --no-merge

        # committing
        c = commit
        cm = commit -m
        cam = commit -v -a --amend

        # push
        ps = push
	po = !git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)

        # pull
        pl = pull
        plr = pull --rebase

        co = checkout
        cob = checkout -b

        d = diff
        dt = difftool
        dc = d --cached

        # list aliases
        ls = !git config --get-regexp alias | cut -c 7-
	portfolio = !git add . && git commit -m \"update: portfolio data + allocation analysis ($(date +%Y-%m-%d))\"
        statement = !git add . && git commit -m \"update: finance data + position analysis ($(date +%Y-%b))\"
	worktree-remove-cursor = "!git worktree list && echo \"--- Removing Cursor worktrees and branches ---\" && git worktree list --porcelain | awk 'BEGIN {wt=\"\"} /^worktree/ {wt=$2} /^branch/ && wt ~ /\\.cursor\\/worktrees/ {branch=$2; gsub(/refs\\/heads\\//, \"\", branch); print wt \"|\" branch}' | while IFS=\"|\" read -r worktree branch; do if [ -n \"$worktree\" ] && [ -n \"$branch\" ]; then echo \"Removing worktree: $worktree (branch: $branch)\"; git worktree remove \"$worktree\" --force; git branch -D \"$branch\" 2>/dev/null || echo \"  Branch $branch already deleted or doesn't exist\"; fi; done"
[init]
        defaultBranch = main
[commit]
        template = ~/.gitmessage
[difftool]
        prompt = false
[difftool "cursor"]
        cmd = /usr/local/bin/cursor --wait --diff "$LOCAL" "$REMOTE"
        trustExitCode = true
