-- Better NULL display (shows [NULL] instead of blank)
\pset null '[NULL]'

-- Expanded output for wide tables (auto-switch when needed)
\x auto

-- Show query execution time
\timing on

-- Better prompts showing database and user
\set PROMPT1 '%[%033[1;32m%]%n@%/%R%[%033[0m%]%# '
\set PROMPT2 '%[%033[1;32m%]%n@%/%R%[%033[0m%]%# '

-- History settings
\set HISTSIZE 10000
\set HISTCONTROL ignoredups

-- Autocomplete keywords in uppercase
\set COMP_KEYWORD_CASE upper

-- Verbose error reports
\set VERBOSITY verbose

-- Wrap long lines instead of horizontal scroll
\pset format wrapped

-- Show row count after queries
\pset footer on

-- Use pager for long output (less with better defaults)
\setenv PAGER 'less -S -X -F'

-- Shortcuts for common queries
\set version 'SELECT version();'
\set extensions 'SELECT * FROM pg_available_extensions ORDER BY name;'
\set activity 'SELECT pid, usename, application_name, state, query FROM pg_stat_activity;'
\set locks 'SELECT * FROM pg_locks;'
\set tablesize 'SELECT relname, pg_size_pretty(pg_total_relation_size(oid)) FROM pg_class WHERE relkind = $$r$$ ORDER BY pg_total_relation_size(oid) DESC LIMIT 20;'
